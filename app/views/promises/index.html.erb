<%= render "shared/header" %>

<div class="main">
  <div class="contents">
    <h1 class="title">面会予約一覧</h1>

    <div class="content">
      <% if @promises.present? %>
        <table class="table">
          <thead>
            <tr>
              <th>患者名</th>
              <th>面会日</th>
              <th>時間</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @promises.each do |promise| %>
              <tr>
                <td><%= "#{promise.patient.patient_last_name_kana} #{promise.patient.patient_first_name_kana}" %>様</td>
                <td><%= promise.day %></td>
                <td><%= promise.meeting_time.name %></td>
                <td><%= link_to "詳細ページへ", promise_path(promise) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <% else %>
        <div class="no-promise-message">面会予約はありません。</div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
