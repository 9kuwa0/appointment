<%= render "shared/header" %>

<div class="main">
  <div class="contents">
    <h1 class="title">予約詳細ページ</h1>

    <div class="content">
      <table class="table">
        <thead>
          <tr>
            <th>患者名</th>
            <th>面会日</th>
            <th>時間</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= "#{@promise.patient.patient_last_name_kana} #{@promise.patient.patient_first_name_kana}" %>様</td>
            <td><%= @promise.day %></td>
            <td><%= @promise.meeting_time.name %></td>
          </tr>
        </tbody>
      </table>
      <div class="form-actions">
        <%= link_to "予約を編集する", edit_promise_path, class: "btn" %>
        <%= link_to "予約を削除する", promise_path(@promise.id), data: {turbo_method: :delete}, class: "btn" %>
      </div>
    </div>
    
  </div>
</div>

<%= render "shared/footer" %>