<%= render "families/family_header" %>

<div class="family-main">
  <div class="families">
    患者様ご家族新規登録
  </div>
  <div class="family-form">
    <%= form_with model: @family, url: family_registration_path, class: 'registration-main', local: true do |f| %>

    <%= render "shared/error_message", model: f.object %>

    <div class="family-form-field">
      <label class="form-name">姓</label>
      <%= f.text_field :family_last_name, class:"input_field" %>
    </div>

    <div class="family-form-field">
      <label class="form-name">名</label>
      <%= f.text_field :family_first_name, class:"input_field" %>
    </div>

    <div class="family-form-field">
      <label class="form-name">セイ</label>
      <%= f.text_field :family_last_name_kana, class:"input_field" %>
    </div>

    <div class="family-form-field">
      <label class="form-name">メイ</label>
      <%= f.text_field :family_first_name_kana, class:"input_field" %>
    </div>

    <div class="family-form-field">
      <label class="form-name">メールアドレス</label>
      <%= f.email_field :email, class:"input_field" %>
    </div>

    <div class="family-form-field">
      <label class="form-name">パスワード</label>
      <%= f.password_field :password, class:"input_field" %>
    </div>

    <div class="family-form-field">
      <label class="form-name">確認用パスワード</label>
      <%= f.password_field :password_confirmation, class:"input_field",placeholder:"同じパスワードを入力してください" %>
    </div>

    <div class="family-form-field">
      <%= f.submit "新規登録する", class:"register-btn" %>
    </div>

    <% end %>
  </div>
</div>

<%= render "shared/footer" %>