<%= render "shared/header" %>

<div class="main">
  <div class="contents">
    <h1 class="title">患者情報</h1>

    <div class="content">
        <table class="table">
          <thead>
            <tr>
              <th>階</th>
              <th>部屋</th>
              <th>患者ID</th>
              <th>名前</th>
              <th>フリガナ</th>
              <th>生年月日</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @patient.floor %></td>
              <td><%= @patient.room %></td>
              <td><%= @patient.patient_number %></td>
              <td><%= "#{@patient.patient_last_name} #{@patient.patient_first_name}" %></td>
              <td><%= "#{@patient.patient_last_name_kana} #{@patient.patient_first_name_kana}" %></td>
              <td><%= @patient.birthday %></td>
            </tr>
          </tbody>
        </table>

      <div class="form-actions">
        <%= link_to "編集する", edit_patient_path(@patient), class: "btn" %>
        <%= link_to "削除する", patient_path(@patient.id), data: { turbo_method: :delete }, class: "btn" %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>