<%= render "/staff_members/staff_header" %>
<div class="patient-main">
  <div class="patients">
    患者登録
  </div>
  <div class="patient-form">
    <%= form_with model: @patient, url: patients_path, local: true do |f| %>
    
    <%= render "shared/error_message", model: f.object %>

    <div class="patient-form-field">
      <label class="form-name">患者ID</label>
      <%= f.text_field :patient_number, class:"input_field", id:"patient_number", placeholder:"患者ID" %>
    </div>
    <div class="patient-form-field">
      <label class="form-name">姓</label>
      <%= f.text_field :patient_last_name, class:"input_field", id:"patient_last_name" %>
    </div>
    <div class="patient-form-field">
      <label class="form-name">名</label>
      <%= f.text_field :patient_first_name, class:"input_field", id:"patient_first_name" %>
    </div>
    <div class="patient-form-field">
      <label class="form-name">セイ</label>
      <%= f.text_field :patient_last_name_kana, class:"input_field", id:"patient_last_name_kana", placeholder:"全角カタカナ" %>
    </div>
    <div class="patient-form-field">
      <label class="form-name">メイ</label>
      <%= f.text_field :patient_first_name_kana, class:"input_field", id:"patient_first_name_kana", placeholder:"全角カタカナ" %>
    </div>
    <div class="patient-form-field">
      <label class="form-name">誕生日</label>
      <%= f.date_select :birthday, start_year: 1900, end_year: Date.today.year, default: Date.today %>
    </div>
    <div class="patient-form-field">
      <label class="form-name">病棟</label>
      <%= f.text_field :floor, class:"floor", id:"floor", placeholder:"半角数字のみ" %>階
    </div>
    <div class="patient-form-field">
      <label class="form-name">病室</label>
      <%= f.text_field :room, class:"room", id:"room", placeholder:"半角数字のみ" %>号室
    </div>
    <div class="patient-form-field">
      <%= f.submit "登録する", class:"patient-btn" %>
    </div>
  <% end %>
  </div>

</div>
<%= render "/shared/footer" %>